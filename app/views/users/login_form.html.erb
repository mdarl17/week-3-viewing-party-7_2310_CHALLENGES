<h1>Welcome to User Sign In!</h1>
<%= form_with url: login_path, html: { autocomplete: "off" }, data: { turbo: false }, method: :post do |form| %>
  <% if @location != "" %>
    <%= form.label :email %>
    <%= form.text_field :email, value: @email %>
    <%= form.label :password %>
    <%= form.password_field :password %>
    <%= form.label :location %>
    <%= form.text_field :location, value: @location %>
    <%= form.submit "Log In" %>
  <% else %>
    <%= form.label :email %>
    <%= form.text_field :email %>
    <%= form.label :password %>
    <%= form.password_field :password %>
    <%= form.label :location %>
    <%= form.text_field :location %>
    <%= form.submit "Log In" %>
  <% end %>
<% end %>